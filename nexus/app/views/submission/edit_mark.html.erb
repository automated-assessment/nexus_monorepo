<div class="well">
  <h2>Override Mark</h2>
  <h5>For submission #<%= @submission.id %> (submitted by <%= @submission.user.name %> for <%= @submission.assignment.title %>)</h5>
  <hr />

  <h4>Current final mark: <%= display_final_mark @submission %></h4>
  <br />

  <%= form_for(@submission, url: override_submission_path, html: { class: 'form-horizontal' }) do |f| %>

    <div class="form-group">
      <%= f.label :mark, class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.number_field :mark, in: 0..100, step: 1, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :reason, 'Rationale', class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= text_area_tag :reason, '', size: '24x6', class: 'form-control' %>
      </div>
    </div>

    <br>

    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit 'Override', class: 'btn btn-danger' %>
      </div>
    </div>
  <% end %>
</div>
