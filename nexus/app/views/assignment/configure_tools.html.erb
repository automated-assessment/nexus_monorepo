<div class="row">
  <div class="col-md-8">
    <h2>Configure Tools for <%= @assignment.title %></h2>
    <h6>Assignment ID: <code><%= @assignment.id %></code></h6>

    <%= render 'assignment_description' %>
  </div>
  <div class="col-md-4">
    <%= link_to assignment_path(id: @assignment.id) do %>
      <button type="button" name="button" class="btn btn-success"><%= icon 'check' %> Done</button>
    <% end %>
  </div>
</div>
<hr />

<div class="config-iframes">
  <% @tools_with_augmented_urls.each do |t| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3><%= icon 'wrench' %> <%= t[:tool].name %></h3>
      </div>
      <div class="panel-body">
        <iframe src="<%= t[:augmented_url] %>" width="100%" height="600px">Your browser does not support iframes.</iframe>
      </div>
      <div class="panel-footer">
        <code><%= t[:augmented_url] %></code>
      </div>
    </div>
  <% end %>
</div>
