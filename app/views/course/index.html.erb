<div class="page-header">
  <h2>All Courses</h2>
</div>
<p>
  Your courses are highlighted in green.
</p>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th width="20%">Teacher</th>
    </tr>
  </thead>
  <tbody>
    <% @courses.each do |c| %>
      <tr class="<%= 'success' if current_user.enrolled_in?(c.id) %>">
        <th scope="row"><%= link_to c.title, c %></th>
        <td><%= c.teacher.full_name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% if current_user.staff? %>
  <div class="center-controls">
    <%= link_to(new_course_path) do %>
      <button type="button" class="btn btn-success">Create Course</button>
    <% end %>
  </div>
<% end %>
