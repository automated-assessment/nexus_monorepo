<div class="well">
  <h2>Assignment Created: <%= @assignment.title %></h2>
  <h4 class="course-title"><%= icon 'book' %> <%= link_to @assignment.course.title, @assignment.course %></h4>
  <hr />
  <p class="lead">
    One or more of the tools you selected for this assignment require additional configuration.
  </p>
  <p>
    You can configure these now, or later by following the link on the assignment's page.
  </p>
  <%= link_to assignment_path(id: @assignment.id) do %>
    <button type="button" name="button" class="btn btn-primary">Configure Later</button>
  <% end %>
  <%= link_to assignment_configure_tools_path(id: @assignment.id) do %>
    <button type="button" name="button" class="btn btn-success"><%= icon 'wrench' %> Configure Now</button>
  <% end %>

</div>
