<%= render 'header' %>
<p>
  <%= markdown(@assignment.description) %>
</p>

<hr />

<h4>Submissions for this assignment</h4>

<% if @assignment.submissions.empty? %>
  <p>No submissions have been made for this assignment yet.</p>
<% else %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Submitter</th>
        <th>Submissions</th>
        <th>Highest Mark</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |u| %>
        <tr>
          <th>
            <%= u.name %>
          </th>
          <td>
            <%# TODO: Show all submissions for this user %>
          </td>
          <td>
            <%# TODO: Show highest mark achieved by this user so far %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<hr>

<%= render partial: 'audit_item/panel', locals: { items: @assignment.audit_items } %>
